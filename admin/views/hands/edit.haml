.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:hands, :index)
      %li=link_to pat(:new), url(:hands, :new)
      %li.active=link_to pat(:edit), url(:hands, :edit, :id => @hand.id)
  .content
    %h2.title
      =pat(:edit)
      =mt(:hand)
    .inner
      -form_for :hand, url(:hands, :update, :id => @hand.id), :method => :put, :class => :form do |f|
        =partial "hands/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")
