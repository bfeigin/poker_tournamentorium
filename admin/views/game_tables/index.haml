.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active=link_to pat(:list), url(:game_tables, :index)
      %li=link_to pat(:new), url(:game_tables, :new)
  .content
    %h2.title
      =pat(:all)
      =mt(:game_tables)
    .inner
      %game_table.game_table
        %tr
          %th.first=mat(:game_table, :id)
          %th=mat(:game_table, :tournament_id)
          %th.last="&nbsp;"
        -@game_tables.each do |game_table|
          %tr
            %td.last
              =button_to pat(:edit), url(:game_tables, :edit, :id => game_table.id), :method => :get, :class => :button_to
              ="|"
              =button_to pat(:delete), url(:game_tables, :destroy, :id => game_table.id), :method => :delete, :class => :button_to, :onsubmit => "return confirm('#{pat(:confirm)}')"
      .actions-bar.wat-cf
        .actions="&nbsp;"

-content_for :sidebar, partial("base/sidebar")
