.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:tournaments, :index)
      %li=link_to pat(:new), url(:tournaments, :new)
      %li.active=link_to pat(:edit), url(:tournaments, :edit, :id => @tournament.id)
  .content
    %h2.title
      =pat(:edit)
      =mt(:tournament)
    .inner
      -form_for :tournament, url(:tournaments, :update, :id => @tournament.id), :method => :put, :class => :form do |f|
        =partial "tournaments/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")
